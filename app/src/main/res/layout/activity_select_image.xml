<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="com.moods_final.moods.moods.helper.SelectImageActivity">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">



        <Button
            android:id="@+id/button_take_a_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_photo"
            android:drawableTop="@mipmap/add_a_photo_white_"
            android:background="#262424"
            android:onClick="takePhoto"
            style="@style/ButtonStyle"
            android:layout_alignParentBottom="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:id="@+id/buttonLogout"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="23dp" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_select_a_photo_in_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_image_in_album"
            android:drawableTop="@mipmap/ic_collections"
            android:onClick="selectImageInAlbum"
            style="@style/ButtonStyle"
            android:layout_marginTop="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/button_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw "
            android:onClick="drawImage"
            android:drawableTop="@mipmap/ic_mode_edit_white_24dp"
            style="@style/ButtonStyle"
            android:layout_below="@+id/button_select_a_photo_in_album"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />
    </RelativeLayout>


</LinearLayout>
